@using Hozor.Utilities.Helpers
@model Hozor.DataLayer.Models.CEmployees

@{
    ViewData["Title"] = "ويرايش پرسنل";
}


<section class="panel">
    <header class="panel-heading">
        ويرايش پرسنل
    </header>
    <div class="panel-body">



        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageName" />

            <div class="row col-md-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="PersonalId" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="PersonalId" class="form-control" />
                            <span asp-validation-for="PersonalId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Family" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="Family" class="form-control" />
                            <span asp-validation-for="Family" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Job" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="Job" class="form-control" />
                            <span asp-validation-for="Job" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <select asp-for="Category" class="form-control">
                                <option>هيئت مديره</option>
                                <option>مدير حراست</option>
                                <option>مدير</option>
                                <option>رئيس</option>
                                <option>ساير</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="ImageName" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            @if (Model.ImageName != null)
                            {
                                <img id="imageView" style="margin: 8px auto; width: 150px; height: 195px; float: right" class="thumbnail" src="~/Images/Employee/@Model.ImageName" />
                            }
                            else
                            {
                                <img id="imageView" style="margin: 8px auto; width: 150px; height: 195px; float: right" class="thumbnail" src="~/Images/Employee/user_default.jpg" />
                            }

                            <input onchange="readURL(this)" type="file" name="imgUp" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row col-md-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="ImageNumber" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="ImageNumber" class="form-control" />
                            <span asp-validation-for="ImageNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="FerstName" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input asp-for="FerstName" class="form-control" />
                            <span asp-validation-for="FerstName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row col-md-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input id="StartDate" name="StartDate" value="@Model.StartDate.ToPersianDateTime()" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input id="EndDate" name="EndDate" value="@Model.EndDate.ToPersianDateTime()" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row col-md-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Section" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <select asp-for="Section" asp-items="ViewBag.Sections" class="form-control"></select>
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="IsActive" class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control", @style = "width:15px" } })
                        </div>
                    </div>
                </div>
            </div>



            <div id="buttons">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <input type="submit" class="btn btn-primary" value="ثبت" />
                    @Html.ActionLink("بازگشت به فهرست", "Index")
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts{
    <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
    <script src="~/Scripts/kendo.all.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#StartDate").kendoDatePicker();
            $("#EndDate").kendoDatePicker();
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imageView')
                        .attr('src', e.target.result);
                        //.width(150)
                        //.height(195);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
