@model Hozor.ViewModels.Public.LoginViewModel
@{
    ViewBag.Title = "ورود به سيستم شباك";
    Layout = null;
}




<html lang="en" class="no-js">

<head>

    <meta charset="utf-8">
    <title>ورود به سيستم شباك</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">


    <link rel="stylesheet" href="~/Content/LoginContent/css/reset.css">
    <link rel="stylesheet" href="~/Content/LoginContent/css/supersized.css">
    <link rel="stylesheet" href="~/Content/LoginContent/css/style.css">


</head>

<body>


    <div class="page-container">
        <img src="~/Content/LoginContent/css/IKS.png" width="130px" height="100px" />
        <h1>ورود به سیستم شباك</h1>


        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.AntiForgeryToken()
            <input type="text" name="UserName" class="username" placeholder="نام کاربری">
            <input type="password" name="password" class="password" placeholder="رمز عبور">
            <button type="submit">وارد شوید</button>
            <br/>
            <br/>
            <span asp-validation-for="UserName" class="text-danger"></span>

        </form>


    </div>
    <script src="~/Content/LoginContent/js/jquery-1.8.2.min.js"></script>
    <script src="~/Content/LoginContent/js/scripts.js"></script>

</body>

</html>


